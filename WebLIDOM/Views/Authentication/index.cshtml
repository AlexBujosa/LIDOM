@{
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mb-2 d-flex">
                 <button class="btn btn-primary" style="margin-right:10px;" onclick="showLoginForm()">Iniciar Sesión</button>
                <button class="btn btn-primary" onclick="showRegisterForm()">Registrar Cuenta</button>
            </div>
            <div class="auth" id="login-box" style="display:block;">
                <h2 class="mt-3">Iniciar Sesión</h2>
                <form method="post" asp-action="Login" asp-controller="Authentication">
                    <div class="form-group">
                        <label for="UserName">Usuario:</label>
                        <input type="text" class="form-control" name="UserName">
                    </div>
                    <div class="form-group">
                        <label for="Password">Contraseña:</label>
                        <input type="password" class="form-control" name="Password">
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" class="btn btn-primary" value="Iniciar Sesión">
                    </div>
                </form>
            </div>

            <div class="auth" id="register-box" style="display:none;">
                <h2 class="mt-3">Registrar Cuenta</h2>
                <form method="post" asp-action="Register" asp-controller="Authentication">
                    <div class="form-group">
                        <label for="UserName">Usuario:</label>
                        <input type="text" class="form-control" id="usuario" name="UserName">
                    </div>
                    <div class="form-group">
                        <label for="Password">Contraseña:</label>
                        <input type="password" class="form-control" id="contrasena" name="Password" />
                    </div>
                    <div class="form-group mt-2">
                        <input type="submit" class="btn btn-primary" value="Registrarse">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ActionResponse", "Shared")

<script>
    function showLoginForm() {
        document.getElementById('login-box').style.display = 'block';
        document.getElementById('register-box').style.display = 'none';
    }

    function showRegisterForm() {
        document.getElementById('login-box').style.display = 'none';
        document.getElementById('register-box').style.display = 'block';
    }
</script>
