@{
    List<LidomTeam>? lidomTeams = ViewBag.lidomTeams;
}

<div id="update-lidom-popup" class="popup">
    <div class="popup-content popup-lidom">
        <span class="close" id="update-close-popup">&times;</span>
        <br />
        <h2>Actualizar Equipo LIDOM</h2>
        <br />
       <form method="post" asp-action="UpdateLidomTeam" asp-controller="Lidom">
         <div class="row">
            <input type="hidden" name="Id" id="input_id"/> 
            <div class="col-3 left-align">Equipo: </div>
            <div class="col-9">
                  <input type="text" class="form-control" name="Name" id="input_name" placeholder="Ingresar nombre del equipo">
            </div>
         </div>
         <div class="row mt-1">
            <div class="col-3 left-align">Estadio</div>
            <div class="col-9">
                <input type="text" class="form-control" name="Home" id="input_home"  placeholder="Ingresar nombre del equipo">
            </div>
         </div>
         <div class="row mt-5">
            <button type="submit" class="btn btn-primary">Actualizar Equipo</button>
         </div>
          </form>
    </div>
 </div>
 
<script>
    var lidomTeams = @Html.Raw(Json.Serialize(lidomTeams));
    const updateLidomPopup = document.getElementById("update-lidom-popup");

    const updateLidom = (lidom_id) => {
        const inputId = document.getElementById("input_id");
        const inputName = document.getElementById("input_name");
        const inputHome = document.getElementById("input_home");

        var lidomTeam = lidomTeams.find(x => x.id == parseInt(lidom_id))
        inputId.value = lidomTeam.id;
        inputName.value = lidomTeam.name;
        inputHome.value = lidomTeam.home;

        updateLidomPopup.style.display = "flex";
    }

    const updateClosePopup = document.getElementById("update-close-popup");

    updateClosePopup.addEventListener('click', function(){
        updateLidomPopup.style.display="none";
    })
</script>