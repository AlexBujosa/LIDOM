@{
    ActionResponse? actionResponse = ViewBag.message;
}

@if(actionResponse != null){
    <div class="position-fixed" style="min-width:270px; width:30%; height:auto; bottom:0; right:0; z-index:1;">
         <div class="alert @if (actionResponse.status == 0) { <text>alert-success</text> } else { <text>alert-danger</text> }" role="alert" style="position: absolute; right: 20px; bottom:20px; z-index:1;" id="alert-message">
            <div class="row d-flex">
                <div class="col-2 d-flex justify-content-center align-items-center">
                    @if(actionResponse.status == 0){
                        <img src="~/image/completado.png" height="20px"/>
                    }else {
                        <img src="~/image/error.png" height="20px"/>
                    }    
                </div>
                <div class="col-10">
                    @actionResponse.message
                </div>
            </div>
        </div>
    </div>
}

<script>

  const alertMessage = document.getElementById("alert-message");
  if(alertMessage){
      setTimeout(()=>{
          alertMessage.style.display = "none";
      },3000);
  }
</script>